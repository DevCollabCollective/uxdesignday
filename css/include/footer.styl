.social
  text-align center

  li
    display inline
    margin 0px 5px

    a
      font-size 48px
      color white
      opacity 0.9
      transition opacity 250ms

      &:hover
        opacity 1

    .icon-twitter
      color twitterBlue

    .icon-facebook
      color facebookBlue

    .icon-github
      color #333

footer ul
  margin 30px auto 20px
  text-align center

  li
    color #666
    font-size 0.6em
    font-weight 600
    margin 5px 0px

    a:hover
      color darkBlue