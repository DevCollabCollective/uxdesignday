// Layout

section
  padding 40px 0px
  clear both
  min-width 1040px

.container
  width 1000px
  margin 0px auto
  padding 0px 20px
  position relative

#event-details
  float left
  margin 33px 0px 0px 40px

  p
    font-size 0.6em
    line-height 0.6em

#reasons
  margin-top 40px
  margin-bottom 0px
  overflow hidden

.box
  float left
  width 280px
  margin 0px 20px 20px 0px

  &-last
    margin 0px 0px 20px 0px

  &-reason
    background-color lighten(blue, 3)
    transition background-color 250ms
    cursor default
    padding 10px 20px
    min-height 260px

    &:hover
      background-color lighten(blue, 5)

  &-speaker
    width 235px
    margin-bottom 40px

    h3
      margin-bottom 0px

    a, .speaker-title
      font-size 0.75em
      line-height 1.3em
      display block
      margin 0px
      color gray
      transition color 250ms

    a:hover
      color blue

.sponsor-section
  min-height 400px

  img
    padding 20px 40px 20px
    transition padding 250ms
    border none

    &:hover
      padding 0px 40px 40px