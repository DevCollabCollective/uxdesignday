// Layout

section
  padding 40px 0px
  clear both
  min-width 1040px

.container
  width 1000px
  margin 0px auto
  padding 0px 20px
  position relative

#event-details
  float left
  margin 33px 0px 0px 40px

  p
    font-size 0.6em
    line-height 0.6em

#reasons
  margin-top 40px
  margin-bottom 0px
  overflow hidden

.box
  float left
  width 280px
  margin 0px 20px 20px 0px

  &-last
    margin 0px 0px 20px 0px

  &-reason
    background-color lighten(blue, 3)
    transition background-color 250ms
    cursor default
    padding 10px 20px
    min-height 260px

    &:hover
      background-color lighten(blue, 5)

  &-speaker
    width 235px
    margin-bottom 40px

    h3
      margin-bottom 0px

    a, .speaker-title
      font-size 0.75em
      line-height 1.3em
      display block
      margin 0px
      color gray
      transition color 250ms

    a:hover
      color blue

.sponsor-section
  min-height 400px

  img
    margin 0 40px 0
    border none
    opacity 0.9

    &:hover
      opacity 1

  .medallion
    display block
    position relative
    float left
    margin 30px 121px
    width 91px
    height 92px
    background-image url("../img/medals_sprite@2x.png")
    background-position left top
    background-size cover

    &.silver
      background-position 182px top
    &.bronze
      background-position 91px top

.s-box
  display inline-block
  width 32%
  vertical-align top
