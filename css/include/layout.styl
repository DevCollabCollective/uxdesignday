// Layout

section
  padding 60px 0px
  overflow hidden

.container
  width 1000px
  margin 0px auto
  padding 0px 20px
  clear both
  overflow hidden

#reasons
  margin-top 40px

.box
  float left
  width 280px
  margin 0px 20px 20px 0px

  &-last
    margin 0px 0px 20px 0px

  &-reason
    background-color lighten(blue, 3)
    transition background-color 250ms
    cursor default
    padding 20px
    min-height 200px

    &:hover
      background-color lighten(blue, 5)

  &-lightning
    width 150px

    h3
      margin-bottom 2px

    p
      font-size 0.75em
      margin 0px
      line-height 1.2em
      color gray

  &-speaker
    width 320px

    h2
      margin 5px 0px 0px

    p
      margin-top 5px
      font-size 0.8em
      line-height 1.5em

.sponsor-section img
  margin 10px

  &:hover
    opacity 0.9