// Layout

section
  padding 60px 0px 80px
  overflow hidden

.container
  width 1000px
  margin 0px auto
  padding 0px 20px
  clear both
  overflow hidden

#reasons
  margin-top 40px

.box
  float left
  width 320px
  margin 0px 20px 20px 0px
  box-sizing border-box

  &:last-child
    margin-right 0px

  &-reason
    background-color rgba(255,255,255,0.1)
    transition background-color 250ms
    cursor default
    padding 20px

    &:hover
      background-color rgba(255,255,255,0.15)

  &-lightning
    width 150px
    text-align center

  &-speaker

    h2
      margin 5px 0px 0px

    p
      margin-top 5px
      font-size 0.8em
      line-height 1.5em