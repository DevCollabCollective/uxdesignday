// Layout

section
  padding 60px 0px
  overflow hidden

.container
  width 1000px
  margin 0px auto
  padding 0px 20px
  clear both
  position relative

#reasons
  margin-top 40px
  margin-bottom 0px
  overflow hidden

.box
  float left
  width 280px
  margin 0px 20px 20px 0px

  &-last
    margin 0px 0px 20px 0px

  &-reason
    background-color lighten(blue, 3)
    transition background-color 250ms
    cursor default
    padding 20px
    min-height 200px

    &:hover
      background-color lighten(blue, 5)

  &-lightning
    width 235px

    h3
      margin-bottom -5px

    a
      font-size 0.75em
      margin 0px
      color gray
      transition color 250ms

      &:hover
        color blue

  &-speaker
    width 320px

    h2
      margin 5px 0px 0px

    a
      margin-top 5px
      font-size 0.8em
      line-height 1.5em

.sponsor-section 
  min-height 500px

  img
    padding 20px 40px 20px
    transition padding 250ms
    border none

    &:hover
      padding 0px 40px 40px