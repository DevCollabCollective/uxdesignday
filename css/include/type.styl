// Typography

h1
  font-size 36px
  line-height 45px
  font-weight 600
  margin 0px 0px 40px
  letter-spacing -1px

h2
  font-size 28px
  font-weight 600
  margin 0px 0px

h3
  font-size 15px
  margin 5px 0px

p
  font-size 20px
  font-weight 400
  line-height 30px

a
  text-decoration none
  color blue

  &:hover
    color lighten(blue, 5)

ul
  margin 0px
  padding 0px
  list-style-type none

b, strong, bold
  font-weight 700