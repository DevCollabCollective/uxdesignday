// Typography

h1
  font-size 1.8em
  line-height 1.4em
  font-weight 600
  margin 0px 0px 40px
  letter-spacing -1px

h2
  font-size 1.3em
  font-weight 600
  margin 0px 0px

h3
  font-size 0.9em
  margin 5px 0px 0px
  font-weight 600

p
  font-size 1em
  font-weight 400
  line-height 30px

a
  text-decoration none
  color blue

  &:hover
    color lighten(blue, 5)

  &.active
    color darkBlue

ul
  margin 0px
  padding 0px
  list-style-type none

b, strong, bold
  font-weight 700
