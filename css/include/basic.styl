// Basic stuff

body
  background white
  font-family 'Open Sans', sans-serif
  color black
  padding 80px 0px 0px
  margin 0px
  font-size 20px
  -webkit-font-smoothing antialiased

.logo
  background-image url('../img/logo.png')
  background-size cover
  width 220px
  height 200px
  margin-left 170px

.gap
  height 2em
  clear both
  overflow hidden

.center
  text-align center

.left
  float left

.right
  float right

.hide
  display none

.blue-section
  background-color blue
  color white

.black-section
  background-color black
  color white

.gray-section
  background-color #f7f6f5

.overflow
  overflow hidden

.icon-twitter, .icon-facebook, icon-googleplus, icon-github
  transition color 250ms

.icon-twitter
  color twitterBlue

  &:hover
    color lighten(twitterBlue, 5)

.icon-facebook
  color facebookBlue

  &:hover
    color lighten(facebookBlue, 5)

.icon-googleplus
  color googleRed

  &:hover
    color lighten(googleRed, 5)

.icon-github
  color #333

  &:hover
    color lighten(#333, 5)