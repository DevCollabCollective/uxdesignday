// Replace anything with high res asset

@media (-webkit-min-device-pixel-ratio: 1.25), (min-resolution: 120dpi)
  header .nav-logo
    background-image url('../img/navlogo@2x.png')

// Responsiveness for mobile

@media screen and (max-width: 600px)

  body
    font-size 18px

  .container, .box-reason, .box-speaker, .box-lightning
    width 100%
    box-sizing border-box

  .logo, nav
    display none

  header
    position absolute

  .button
    width 100%
    box-sizing border-box

  .box-speaker img, .box-lightning img
    width 100%
    height auto

  .sponsor-section .container img
    margin 20px auto
    display block

  .resources li
    width 100%