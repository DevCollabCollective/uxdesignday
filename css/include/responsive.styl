// Responsiveness for mobile

@media screen and (max-width: 600px)

  body
    font-size 16px

  .container, .box-reason, .box-speaker
    width 100%
    box-sizing border-box

  .logo, nav
    display none

  header
    position absolute

  .button
    width 100%
    box-sizing border-box

  .box-speaker img
    width 100%