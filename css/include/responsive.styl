// Responsiveness

@media screen and (max-width: 1040px)

  .container
    width 700px

  .box
    width 45%

@media screen and (max-width: 600px)

  .container, .box
    width 100%
    margin-right 0px
    margin-left 0px
    box-sizing border-box

  .logo, nav
    display none

  header
    position absolute

  .button
    width 100%
    box-sizing border-box