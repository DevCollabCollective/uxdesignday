// Replace the logo with high res asset

@media (-webkit-min-device-pixel-ratio: 1.25), (min-resolution: 120dpi)
  header .nav-logo
    background-image url('../img/navlogo@2x.png')

// Responsiveness for mobile

@media screen and (max-width: 600px)

  body
    font-size 18px

  .container, .box-reason, .box-speaker, .box-lightning, .button, .box-speaker img, .box-lightning img, .resources li
    width 100%
    box-sizing border-box
    -moz-box-sizing border-box

  header
    position absolute

  .box-speaker img, .box-lightning img
    height auto

  .sponsor-section .container img
    margin 20px auto
    display block

  .logo, #nav-links, #header-share
    display none