blue        = #2ba6d4
darkBlue    = #207c9f
darkerBlue  = #15536a
black       = #222

@import 'include/header.styl'
@import 'include/buttons.styl'
@import 'include/layout.styl'
@import 'include/type.styl'
@import 'include/icons.styl'

body
  background-color white
  font-family 'Open Sans', sans-serif
  color black
  padding 80px 0px 0px
  margin 0px
  -webkit-font-smoothing antialiased

.logo
  background-image url('../img/logo.png')
  background-size cover
  width 220px
  height 200px

.gap
  height 40px
  clear both
  overflow hidden

.center
  text-align center

.left
  float left

.right
  float right